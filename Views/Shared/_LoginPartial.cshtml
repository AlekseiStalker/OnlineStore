@using Microsoft.AspNetCore.Mvc
 

@if (User.Identity.Name != null)
{
	<form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
		<ul class="nav navbar-nav navbar-right">
			<li>
				<a class="panel-title" asp-controller="Account" asp-action="Profile" title="Manage">@User.Identity.Name</a>
			</li>
			<li>
				<button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
			</li>
		</ul>
	</form>
}
else
{
	<ul class="nav navbar-nav navbar-right">
		<li><a class="panel-title" asp-controller="Account" asp-action="Register">Register</a></li>
		<li><a class="panel-title" asp-controller="Account" asp-action="Login">Log in</a></li>
	</ul>
}
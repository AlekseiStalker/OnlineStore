@model  OnlineStore.Models.ViewModels.LoginViewModel;

@{
	ViewData["Title"] = "Login";
}

<div class="container-fluid">
	<center><h2 class="bg-primary">Login</h2></center>

	<table class="table table-bordered"> 
		<form asp-action="Login" method="post">
			<div class="nav navbar-nav">
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Email">Your email:</label>
					<input class="form-control" asp-for="Email" />
				</div>
				<div class="form-group">
					<label asp-for="Password">Your password:</label>
					<input class="form-control" asp-for="Password" />
				</div>
				<div class="form-group">
					<label asp-for="RememberMe">Remember you?</label>
					<input type="checkbox" asp-for="RememberMe">
				</div>
				<div>
					<div class="text-center">
						<button type="submit" class="btn btn-default">Login</button>
						<div>
							<p>
								Not yet registered?<a asp-action="Register" asp-controller="Account">Sign Up</a>
							</p>
						</div>
					</div>
				</div>
			</div>
		</form> 
	</table>
</div>